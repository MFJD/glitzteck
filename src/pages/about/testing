        {/* Page intro */}
        <motion.section
          variants={sectionItemVariants}
          className="mt-10 text-left max-w-2xl"
        >
          <h2 className="primaryText text-xl sm:text-2xl md:text-3xl font-medium tracking-tight text-slate-900">
            {t("ftb")}
          </h2>
          <p className="mt-2 text-sm leading-relaxed text-slate-600">
            {t("newsdesc")}
          </p>
        </motion.section>

        {/* Featured + List */}
        <motion.section
          variants={sectionItemVariants}
          className="relative mt-8 sm:mt-10"
        >
          <div className="grid grid-cols-1 lg:grid-cols-2 gap-x-8 gap-y-12 sm:gap-y-16">
            {/* FEATURED POST */}
            {featuredPost && (
              <article className="w-full max-w-xl lg:max-w-lg">
                <div className="group relative rounded-2xl bg-white/60 backdrop-blur-[2px] ring-1 ring-slate-900/5 shadow-[0_20px_40px_-10px_rgba(0,0,0,0.08)] p-5 sm:p-6 transition-colors duration-200 hover:bg-white">
                  <time
                    dateTime={featuredPost.datetime}
                    className="block text-[0.7rem] font-medium uppercase tracking-wide text-slate-500"
                  >
                    {featuredPost.date}
                  </time>

                  <h2
                    id="featured-post"
                    className="mt-2 text-lg sm:text-xl font-semibold leading-snug text-slate-900 group-hover:text-slate-700 transition-colors"
                  >
                    {featuredPost.title}
                  </h2>

                  <p className="mt-3 text-sm leading-relaxed text-slate-600 line-clamp-4">
                    {featuredPost.description}
                  </p>

                  <div className="mt-5 flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                    <a
                      href={featuredPost.href}
                      aria-describedby="featured-post"
                      className="text-xs font-semibold text-cyan-600 hover:text-cyan-500 inline-flex items-center gap-1"
                    >
                      {t("cread")}
                      <span aria-hidden="true" className="translate-y-[1px]">
                        &rarr;
                      </span>
                    </a>

                    <a
                      href={featuredPost.author.href}
                      className="flex items-center gap-x-2.5 text-xs font-medium text-slate-700 hover:text-slate-900"
                    >
                      <img
                        alt={featuredPost.author.name}
                        src={featuredPost.author.imageUrl}
                        className="h-7 w-7 flex-none rounded-full bg-slate-100 ring-1 ring-slate-900/5 object-cover"
                      />
                      <span className="leading-none">{featuredPost.author.name}</span>
                    </a>
                  </div>
                </div>
              </article>
            )}

            {/* OTHER POSTS LIST */}
            <div className="w-full max-w-2xl lg:max-w-none">
              <div className="divide-y divide-slate-200/70">
                {posts.map((post) => (
                  <article
                    key={post.id}
                    className="py-6 first:pt-0 last:pb-0 flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4"
                  >
                    {/* Copy block */}
                    <div className="group relative flex-1 max-w-xl">
                      <time
                        dateTime={post.datetime}
                        className="block text-[0.7rem] font-medium uppercase tracking-wide text-slate-500"
                      >
                        {post.date}
                      </time>

                      <h3 className="mt-1 text-base font-semibold leading-snug text-slate-900 group-hover:text-slate-700 transition-colors">
                        <a href={post.href} className="inline-block">
                          <span className="absolute inset-0" aria-hidden="true" />
                          {post.title}
                        </a>
                      </h3>

                      <p className="mt-2 text-sm leading-relaxed text-slate-600 line-clamp-3">
                        {post.description}
                      </p>

                      <a
                        href={post.href}
                        className="mt-3 inline-flex text-[0.7rem] font-semibold text-cyan-600 hover:text-cyan-500"
                      >
                        {t("cread")} â†’
                      </a>
                    </div>

                    {/* Author block */}
                    <a
                      href={post.author.href}
                      className="flex items-center gap-x-2.5 text-xs font-medium text-slate-700 hover:text-slate-900 shrink-0"
                    >
                      <img
                        alt={post.author.name}
                        src={post.author.imageUrl}
                        className="h-7 w-7 flex-none rounded-full bg-slate-100 ring-1 ring-slate-900/5 object-cover"
                      />
                      <span className="leading-none">{post.author.name}</span>
                    </a>
                  </article>
                ))}
              </div>
            </div>
          </div>
        </motion.section>